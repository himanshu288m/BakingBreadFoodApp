<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userlogin"
    tools:context="com.proyek.rahmanjai.eatit.SignIn">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="379dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPhone"
            android:hint="Phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:text="08319681498"
            android:textColor="#000000"
            android:textSize="20dp"
            android:inputType="phone"

            app:met_floatingLabel="highlight"
            app:met_maxCharacters="12"

            app:met_singleLineEllipsis="true"
            />
        <!--app:met_primaryColor="@android:color/white"-->
        <!--app:met_baseColor="@android:color/white"-->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPassword"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:text="1234"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:inputType="textPassword"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/black"
            app:met_singleLineEllipsis="true"
            />

        <com.rey.material.widget.CheckBox
            android:id="@+id/ckbRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/Material.Drawable.CheckBox"
            android:text="Remember Me"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            app:cbd_strokeColor = "@android:color/white"
            app:cbd_tickColor = "@color/colorPrimaryDark"/>

    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btnSignIn"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_weight="1"
        android:text="Sign In"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        app:cornerRadius="4dp"
        app:fButtonColor="@color/btnSignIn"


         />



</RelativeLayout>
