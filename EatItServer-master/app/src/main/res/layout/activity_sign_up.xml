<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.proyek.rahmanjai.eatitserver.SignUp">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
       />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:text="S I G N  U P"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPhone"
            android:hint="Phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:text="08319681498"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:inputType="phone"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtName"
            android:hint="Your name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:text="Himanshu Gupta"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:inputType="text"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPassword"
            android:hint="Phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:text="1234"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtRestaurantName"
            android:hint="Restaurant Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"

            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:inputType="text"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >

            <info.hoang8f.widget.FButton
                android:id="@+id/btnSelect"
                android:text="SELECT IMAGE"
                android:layout_width="90dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout2"
                android:textColor="@android:color/white"
                app:cornerRadius="4dp"
                app:fButtonColor="#3499FF" />

            <info.hoang8f.widget.FButton
                android:id="@+id/btnnupload"
                android:text="UPLOAD IMAGE"
                android:layout_width="90dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout2"
                android:textColor="@android:color/white"
                app:cornerRadius="4dp"
                app:fButtonColor="#3499FF" />

        </LinearLayout>
    </LinearLayout>



    <info.hoang8f.widget.FButton
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btnSignUp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_weight="1"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        app:cornerRadius="4dp"
        app:fButtonColor="#3499FF" />


</RelativeLayout>
